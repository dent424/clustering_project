	    <script type="text/javascript">
	    	function draw(data) {
	    		"use strict";

	    		var num_solutions = 8;

	    		var cluster_var_name = Array.apply(null, Array(num_solutions)).map(function (_, i) {return (i+2) + "_cluster";});


